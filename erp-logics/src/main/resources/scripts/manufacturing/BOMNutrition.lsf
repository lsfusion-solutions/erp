proteins 'Белки 100г, г' = DATA NUMERIC[8,2](Product);
energy 'Энерг.ценность на 100г, ккал' = DATA NUMERIC[8,2](Product);
productYield 'Выход' = DATA VARSTRING[100] (Product) MINCHARWIDTH 20 PREFCHARWIDTH 20;

