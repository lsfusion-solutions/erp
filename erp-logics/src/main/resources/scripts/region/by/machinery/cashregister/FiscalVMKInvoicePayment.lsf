MODULE FiscalVMKInvoicePayment;

REQUIRE FiscalVMK, POSInvoice;

fiscalVMKPrint 'Напечатать оплату' = ACTION CUSTOM 'lsfusion.erp.region.by.machinery.cashregister.fiscalvmk.FiscalVMKPrintInvoicePaymentActionProperty' (Sale.Invoice, Payment.Payment);
printReceipt(Sale.Invoice invoice, Payment.Payment payment) += { IF sidModelCurrentCashRegister() == 'VMK' THEN fiscalVMKPrint(invoice, payment); }

fiscalVMKPrintReturn 'Напечатать возврат' = ACTION CUSTOM 'lsfusion.erp.region.by.machinery.cashregister.fiscalvmk.FiscalVMKPrintReturnInvoicePaymentActionProperty' (Sale.Invoice, Payment.Payment);
printReturnReceipt(Sale.Invoice invoice, Payment.Payment payment) += { IF sidModelCurrentCashRegister() == 'VMK' THEN fiscalVMKPrintReturn(invoice, payment); }
