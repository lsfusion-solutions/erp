    BY group, stock, date](group, stock, date)/
        (OVERRIDE 1 IF group IS StatisticGroup, conversionFactor(group));
retailSumResidentBBy 'Сумма на начало, сум.' (StatisticGroup group, Stock stock, DATE date)=
