credit(InvSupIHGeneralLedger generalLedger,DimensionType dimensionType) += WHEN CLASS(invoice(generalLedger)) AND dimensionType == DimensionType.contract THEN contractSku(invoice(generalLedger));
idOperation(InvSupIHGeneralLedger l) += '01' IF l IS InvSupIHGeneralLedger;    

