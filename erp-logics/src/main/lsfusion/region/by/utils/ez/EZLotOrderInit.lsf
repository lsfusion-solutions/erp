    ezToken() <- token(legalEntityStock(i));
    
    TRY {
        insecureSSL() <- TRUE;
  //      EXTERNAL HTTP POST urlEZ() + '/catalogs/10002' HEADERS ezHeadersLotOrder TO result; // Обувь
         EXTERNAL HTTP POST urlEZ() + '/catalogs/'  HEADERS ezHeadersLotOrder TO result; // 
