    PROPERTIES(let) name READONLY, loginTopBy, passwordTopBy, hostTopBy, portTopBy
;
    
DESIGN integrationData {
    pane {
        NEW vs {
            caption = 'TopBy';
            NEW params {
                caption = 'Общие';
