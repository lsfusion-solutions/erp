WHEN SETCHANGED (overGoodsAccepted(invoice(EInvoice e))) AND NOT (CHANGED(contactCustomerStock(e)))  DO {
    contactCustomerStock(e) <- STRING[150](overGoodsAccepted(invoice(e)));
