WHEN SETCHANGED(nameTruck(invoice(EInvoice e))) AND NOT (CHANGED(transportID(e)))  DO {
    transportID(e) <- STRING[35](nameTruck(invoice(e)));
}
WHEN SETCHANGED (trailer(invoice(EInvoice e))) AND NOT (CHANGED(trailerID(e)))  DO {
