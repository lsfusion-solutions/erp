    OBJECTS ep = INTEGER IN patch EXTID 'Entities'
    FILTERS patchEntity(ep) == e
    PROPERTIES(ep) entityTypeP EXTID 'EntityType',
                   entityIdP EXTID 'EntityId',
                   parentEntityIdP EXTID 'ParentEntityId',
