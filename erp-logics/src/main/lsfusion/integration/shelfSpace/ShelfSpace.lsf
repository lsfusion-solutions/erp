//-- 15.	InformationRegisterRecordSet_PicturesProducts
imageShelfSpaceCustom = ABSTRACT IMAGEFILE (Item);
imageShelfSpace (Sku s) = OVERRIDE imageShelfSpaceCustom(s), image(s);

exportImagesShelfSpace 'Выгрузка изображений в каталог' () {
    IF exportDirectoryShelfSpace() AND imagesPathShelfSpace() THEN {
        FOR imageShelfSpace(Sku s) AND active(s) AND barcode(s) DO {
            WRITE imageShelfSpace(s) TO exportDirectoryShelfSpace() + imagesPathShelfSpace() + STRING(barcode(s));
        }
    }
} IN shelfSpace;

dateImageChangedShelfSpace = DATA DATE (Sku);
skipChangedShelfSpaceImage = ABSTRACT BOOLEAN ();

WHEN (SETCHANGED(imageShelfSpace(Sku s)) OR SETCHANGED (barcode(s))) AND NOT skipChangedShelfSpaceImage() DO {
    dateImageChangedShelfSpace(s) <- currentDate();
}

exportChangedImagesShelfSpace 'Выгрузить измененные изображения' () {
    FOR imageShelfSpace(Sku s) AND dateImageChangedShelfSpace(s) == sum(currentDate(), -1) DO {
        WRITE imageShelfSpace(s) TO exportDirectoryShelfSpace() + imagesPathShelfSpace() + STRING(barcode(s));
    }
} IN shelfSpace;

 
