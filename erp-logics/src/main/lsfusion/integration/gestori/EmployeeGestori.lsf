MODULE EmployeeGestori;

REQUIRE Employee;

NAMESPACE Employee;

disableRangeControl 'Не контролировать документы по матрице' = DATA BOOLEAN (Employee);

EXTEND FORM employee
    PROPERTIES disableRangeControl(e)
;

EXTEND FORM employees
    PROPERTIES READONLYIF isEditable() disableRangeControl(e)
;

DESIGN employee {
    access {
        MOVE PROPERTY(disableRangeControl(e));
    }
}