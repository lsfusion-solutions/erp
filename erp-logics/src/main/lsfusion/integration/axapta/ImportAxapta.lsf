MODULE ImportAxapta;

NAMESPACE ImportAxapta;

host 'Хост' = DATA ISTRING[30]();
base 'База' = DATA ISTRING[100]();
login 'Логин' = DATA ISTRING[100]();
password 'Пароль' = DATA ISTRING[100]() ECHO;

areaId 'Area ID' = DATA ISTRING[100]();
 
connectionString = 'jdbc:sqlserver://' + host() + ';databaseName=' + base() + 
                    ';User=' + login() + ';Password=' + password();

sqlImport 'Импорт из SQL' = DATA BOOLEAN ();

EXTEND FORM integrationData 
    PROPERTIES () sqlImport, hostAX = host, base, login, password, areaId;
;

DESIGN integrationData {
    pane {
        NEW axapta {
            caption = 'Axapta';
            fill = 1;
            NEW axaptaSQLParams {
                type = CONTAINERH;
                caption = 'Параметры';
                MOVE PROPERTY (sqlImport());
                MOVE PROPERTY (hostAX);
                MOVE PROPERTY (base());
                MOVE PROPERTY (login());
                MOVE PROPERTY (password());
                MOVE PROPERTY (areaId());
            }
            NEW importAxaptaCont {
                type = CONTAINERH ;
                NEW axaptaButtons { 
                    caption = 'Импорт';
                    fill = 1;
                }
            }
        }
    }
}