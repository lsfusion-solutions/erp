WHEN LOCAL FORMS userPriceList CHANGED(company(UserPriceList o)) DO {
    IF countStocks (company(o)) == 1 THEN
        companyStock(o) <- defaultStock(company(o));
    IF NOT in(company(o), companyStock(o)) THEN 
        companyStock(o) <- NULL;
}

