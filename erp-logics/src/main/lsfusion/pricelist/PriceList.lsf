                }
                NEW tabContainer {
                    type = TABBED;
                    fill = 3;
                    MOVE BOX(s2);
                    MOVE BOX(b){
                        caption = 'Партии';
                    }                    
                }
            }
        }

    }
    MOVE TOOLBARBOX;

    PROPERTY(formOk()) {
        caption = 'Провести';
    }
}

