            }
        }

        NEW thirdContainer{
            fill = 1;
            caption = 'Вид цен';
            MOVE BOX(t);
        }
        REMOVE BOX(tc);
        REMOVE BOX(to);        
        NEW fourthContainer {
            caption = 'Подбор';
            NEW topThirdContainer{
                type = CONTAINERH;
                MOVE BOX(ts2);
                NEW filtersContainer {
                    caption = 'Фильтры';
                    type = CONTAINERH;
                    MOVE PROPERTY(nameFilterPriceListType(p));
                }
            }
            NEW detailFourthContainer{
                fill = 1;
                type = SPLITH;
                NEW treeContainer {
                    fill = 1;
                    MOVE PROPERTY(nameGroupTypeP);
                    MOVE BOX(TREE skuTree2) {
                        caption = 'Группы товаров';
