@defineDocumentDetailPriceCustomPrefix (productDetail, , ' изделия');
costPrice 'Себестоимость изделия' = DATA NUMERIC[16,4] (ProductDetail);


sum 'Сумма изделия' = DATA NUMERIC[18,4] (ProductDetail);
