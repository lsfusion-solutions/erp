shortNameUOM 'Ед. изм.' (ComponentDetail componentDetail) = shortName(UOM(componentDetail));

CONSTRAINT (CHANGED(component(ComponentDetail d)) OR CHANGED (bruttoSku(d))) AND component(d) AND bruttoSku(d) AND NOT bruttoSku(d) == sku(component(d))
