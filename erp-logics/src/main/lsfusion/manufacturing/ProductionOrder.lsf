// Цены компонент
@defineDocumentDetailPriceCustomPrefix (productDetail, components, ' компонентов');

VATComponent (ProductDetail d) = VATComponent(order(d));
VATProduct 'Включает НДС' (ProductDetail d) = VATProduct(order(d));
