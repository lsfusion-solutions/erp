MODULE ProductionOutputAccountLedger;

REQUIRE ProductionOutput, PriceListLedgerAccount;

NAMESPACE Production;

accountLedgerPrice = ABSTRACT VALUE NUMERIC[16,4] (OutputDetail);
accountLedgerPrice (OutputDetail a) += price(a);

// Проводим по регистру учетных цен
@implementSystemLedgerPriceListType(account, OutputDetail, legalEntityStock, stock, accountLedger);

in(OutputDetail ledger, OutputDetail batch) += (ledger AS OutputDetail) == batch;

operation (OutputDetail ledger) += operation(output(ledger));
