MODULE UpdatePriceDashboardPromotion;

REQUIRE UpdatePriceDashboard, PriceListPromotion;

NAMESPACE Pricing;

backgroundUpdate(s,st) += WHEN promotionPriceListDetailA(s, st) AND NOT skipPromotionColor() THEN colorPromotion(s, st);

EXTEND FORM updatePriceDashboard
    FILTERGROUP promotion
        FILTER 'В акции' filterPromotion(sk, d)
;