    price(d) <- overPrice(sku(d), receipt(d), dateTime(d));    
}
WHEN LOCAL FORMS zReport CHANGED (sku(ReceiptDetail d))  AND NOT (CHANGED (idBarcode(d))) DO {
    idBarcode(d) <- idBarcode(sku(d));
}
        
