MODULE Tools;

REQUIRE Utils;

@applicationForm(tools, 'Инструменты');

NAVIGATOR {
    application {
        NEW tools;
    }
}

// download
downloadFiles(STRING file) {
    stringToFile('zip /tmp/download.zip ' + file + ' -x download.sh','UTF-8','sh');
    WRITE resultFile() TO '/tmp/download';
    cmd('chmod +x /tmp/download.sh');
    cmd('/tmp/download.sh');
    delete('/tmp/download.sh');
    open('/tmp/download.zip');
    delete('/tmp/download.zip');
}
