DESIGN options {
    pos {
        MOVE PROPERTY(setNullFilters());
    }
}

WHEN LOCAL SET(filterBarcode()) AND setNullFilters() DO {
    filterPrice() <- NULL;
    filterNameSku() <- NULL;
}
WHEN LOCAL SET(filterPrice()) AND setNullFilters() DO {
    filterBarcode() <- NULL;
    filterNameSku() <- NULL;
}
WHEN LOCAL SET(filterNameSku()) AND setNullFilters() DO {
    filterBarcode() <- NULL;
    filterPrice() <- NULL;
}

overPostCash(Receipt r) + {
    FOR receipt(ReceiptDetail d)==r AND d IS ReceiptSaleDetail AND currentBalance(batch(d), departmentStore(d)) (-) quantity(d) < 0.0 DO {
        returnPost() <- TRUE;
        MESSAGE 'Нет достаточного кол-во товара "'+nameSku(d)+'", выберите другую партию' NOWAIT;
    }
}

