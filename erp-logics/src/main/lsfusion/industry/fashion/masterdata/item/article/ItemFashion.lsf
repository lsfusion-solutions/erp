@defineStringItemAttribute(sizeHand, STRING[10], 'Обхват кисти', itemFashion);
@defineItemAttributeBatch (sizeHand, 'Обхват кисти');

@defineStringItemAttribute(footLength, STRING[10], 'Длина стопы', itemFashion);
