MODULE PurchaseOrderAgreement;

REQUIRE PurchaseOrder;

NAMESPACE Purchase;

EXTEND FORM userOrder
    FILTERS in(agreement(o), ks) OR NOT skuIn(agreement(o)) 
; 

CONSTRAINT (SETCHANGED(sku(UserOrderDetail d)) OR SETCHANGED(agreement(d))) AND skuIn(agreement(d)) AND NOT in(agreement(d), sku(d))
    MESSAGE 'В заказан добавлен товар, не соответствующий соглашению с поставщиком';