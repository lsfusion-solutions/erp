MODULE PurchaseOrderPromotion;

REQUIRE PurchaseOrder, PriceListPromotion;

NAMESPACE Purchase;

EXTEND FORM userOrder
    FILTERGROUP promotion
        FILTER 'В акции' filterPromotion(ks, st)
;
   
background(Sku s, UserOrder o, Stock st) += WHEN promotionPriceListDetailA(s, st) AND o IS UserOrder THEN colorPromotion(s, st);

