        FILTER 'С поступлением ' countPurchaseSupplier(supplier(i), sku(b)) 'F8'
        FILTER 'В прайсе ' companyA(priceListType(i, b), b, customerStock(i), dateTime(i)) == supplier(i) 'F7'
