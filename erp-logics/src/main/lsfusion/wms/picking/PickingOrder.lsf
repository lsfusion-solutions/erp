isClosed[Document](PickingOrder invoice) += isClosed(invoice);
isPosted[Document](PickingOrder invoice) += isPosted(invoice);
number[Document](PickingOrder picking) += number(picking);
series[Document](PickingOrder picking) += series(picking);
