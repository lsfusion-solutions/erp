index[DocumentDetail](PickingOrderDetail detail) += index(detail);
sku[DocumentDetail](PickingOrderDetail detail) += sku(detail);
quantity[DocumentDetail](PickingOrderDetail detail) += quantity(detail);

document[DocumentDetail](PickingOrderDetail detail) += pickingOrder(detail);

supplier[Document](PickingOrder picking) += legalEntity(stock(picking));
supplierStock[Document](PickingOrder picking) += stock(picking);

//----------------------------------------------- Комплектация ---------------------------------------------------//

NAVIGATOR {
    WMSNavigator {
        NEW FOLDER pickingNavigator 'Комплектация' {
            NEW pickingOrders;
