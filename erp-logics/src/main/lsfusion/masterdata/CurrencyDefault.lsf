MODULE CurrencyDefault;

REQUIRE Currency;

NAMESPACE Currency;

// --------------------------------------------------- Стандартные значения ------------------------------------ //

loadDefaultCurrency 'Добавить валюты' (BPSTRING[3] ishortName, VARISTRING[50] iname, BPSTRING[5] isymbol)  { 
    NEW c = Currency {
       shortName(c) <- ishortName;
       name(c) <- iname;
       symbol(c) <- isymbol;
    }
}

overLoadDefaultCurrencies  ABSTRACT LIST ( );

loadDefaultCurrencies 'Загрузить стандартные валюты'()  { 
