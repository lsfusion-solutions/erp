coeffSum 'Удельный вес по стоимости' = NUMERIC[22,8](sum(DeclarationDetail d)) / sumDeclarationDetail(declaration(d));

calcChargeSum = Utils.round(chargeSum(declaration(DeclarationDetail d)) * coeffSum(d),
