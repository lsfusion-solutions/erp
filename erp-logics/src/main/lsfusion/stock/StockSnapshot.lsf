deleteSnapshots 'Удалить старые аналитические отчеты'() { 
    FOR sum(date(Snapshot r),countDaysDelete(snapshotType(r))) < currentDate()
        OR (NOT snapshotType(r) AND sum(date(r), countDaysDeleteSnapshots()) < currentDate()) DO {
            DELETE  r;
            apply();
        };
}


