edit(UserOrderDetail d) + {  DIALOG userOrder OBJECTS w = userOrder(d), d = d DOCKED; }

show 'Просмотреть'  ABSTRACT LIST ( OrderDetail) TOOLBAR;
show(UserOrderDetail d)  {
    NEWSESSION {
