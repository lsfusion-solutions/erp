FORM documents 'Документы с товарами'
    PROPERTIES()  TOOLBAR fillPriceDocuments, numberSelectedDocuments
;

DESIGN documents {
    BOX {
        size = (1024, 768);
        NEW  tabs {
            type = TABBED;
            fill = 1;
