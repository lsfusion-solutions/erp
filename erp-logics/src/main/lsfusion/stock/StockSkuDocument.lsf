    skipFillBatch = ABSTRACT CASE BOOLEAN (###object##Detail);
    overFillDocument (User###object##Detail i, DocumentDetail d) + { 
        IF NOT skipFillBatch(i) THEN {
            batch(i) <- batch(d);
        }        
    }
END

