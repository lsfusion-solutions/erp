index(CashRegister cr) = PARTITION SUM 1 ORDER cr IF cr IS CashRegister AND NOT id(cr);

WHEN SET(CashRegister cr IS CashRegister) DO id(cr) <- (GROUP MAX id(CashRegister c AS CashRegister)) (+) 1;

